<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="chat.floo.mpmflp.ArticlePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uploadinfo"
            android:text="upload | by Admin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadinfo"
            android:id="@+id/title"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="25dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_below="@+id/title"
            android:id="@+id/articleImage"
            android:src="@drawable/placeholder_image"
            android:layout_centerHorizontal="true" />
        <chat.floo.mpmflp.views.JustifiedTextView
            android:id="@+id/content"
            android:text="Content here"
            android:textSize="15dp"
            android:textColor="@color/Black"
            android:layout_below="@+id/articleImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>

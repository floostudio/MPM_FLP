<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:divider="@drawable/mydivider"
    android:showDividers="middle"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center|center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Training Detail"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:text="Jumlah Soal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="17dp"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="17dp"
                android:id="@+id/totalQuestion"
                android:gravity="start|left"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:text="30"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:text="Waktu per soal (detik)"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="17dp"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="17dp"
                android:id="@+id/time"
                android:gravity="start|left"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:text="5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:text="Batas Kelulusan"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="17dp"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="17dp"
                android:id="@+id/passingGrade"
                android:gravity="start|left"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:text="60"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@color/cpb_blue"
                android:textSize="20dp"
                android:id="@+id/highscore"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:text="HIGHSCORE"
                android:visibility="gone" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="#32CD32"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:id="@+id/start"
                style="?android:attr/borderlessButtonStyle"
                android:text="START"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout><!-- From: file:/Users/iqbal/Desktop/FortinGCMCHat_ANDROID%20STUDIO/fortinGCMCHat/src/main/res/layout/training_detail.xml -->